{{!< default}}
{{#post ~}}
    <header id="header" class="header">
        <section class="header--top">
            {{>header-navigation}}
        </section>
        <section class="hero post-meta">
            <div class="hero-content">
                <h1 class="post-title animated fadeInUp delay-1">{{{title}}}</h1>
                <div class="post-data">
                    <p class="date animated fadeInUp delay-2">{{t "Posted"}} <time class="timesince" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='YYYY-MM-DD HH:mm'}}">{{date published_at timeago='true'}}</time></a></p>
                    {{!-- <p class="post--read-time animated fadeInUp delay-3">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</p> --}}
                    {{#if tags}}
                        <p class="post--tags animated fadeInUp delay-4"> {{tags class="tag" prefix="" separator=" "}}</p>
                    {{/if}}
                </div>
            </div>
        </section>
    </header>
    <main id="main" class="main">
        <article class="animated fadeIn delay-5 {{post_class}}">
            <section class="content">
                {{content}}
            </section>
        </article>
    </main>
    {{#if primary_tag}}
        {{#next_post in="primary_tag"}}
            <a href="{{url}}" class="read-more hero {{#if feature_image}}cover-image {{/if}}animated fadeIn delay-5"{{#if feature_image}} style="background-image: url({{img_url feature_image}})"{{/if}}>
                <div class="hero-content">
                    <p class="read-more-text">~ {{t "Read next post in {primary_tag}" primary_tag=primary_tag.name}} ~</p>
                    <span class="post-title">{{{title}}}</span>
                    <div class="post-data">
                        <p class="date">{{t "Posted"}} <time class="timesince" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='YYYY-MM-DD HH:mm'}}">{{date published_at timeago='true'}}</time></p>
                        {{!-- <p class="post--read-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</p> --}}
                    </div>
                </div>
            </a>
        {{/next_post}}
    {{/if}}
{{~/post}}
