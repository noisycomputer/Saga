{{!< default}}
{{#post ~}}
    <header id="header" class="header">
        <section class="header--top">
            {{>header-navigation}}
        </section>
        <section class="hero post-meta">
            <div class="hero-content">
                <h1 class="page-title animated fadeInUp">{{{title}}}</h1>
            </div>
        </section>
    </header>
    <main id="main" class="main">
        <article class="animated fadeIn {{post_class}}">
            <section class="content">
                {{content}}
            </section>
        </article>
    </main>
{{~/post}}
